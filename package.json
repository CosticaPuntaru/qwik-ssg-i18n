{
  "name": "qwik-speak",
  "version": "0.0.5",
  "description": "Internationalization (i18n) library to translate texts, dates and numbers in Qwik apps",
  "scripts": {
    "build": "npm run lint && npm run build.lib && npm run build.types",
    "build.client": "vite build",
    "build.lib": "vite build --mode lib",
    "build.ssr": "vite build --ssr src/entry.ssr.tsx",
    "build.types": "tsc --project tsconfig.lib.json",
    "dev": "npm run dev.ssr",
    "dev.client": "vite",
    "dev.debug": "node --inspect-brk node_modules/vite/bin/vite.js --mode ssr",
    "dev.ssr": "node --inspect node_modules/vite/bin/vite.js --mode ssr",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint.fix": "eslint \"src/**/*.ts*\" --fix",
    "release": "npm run build && np",
    "start": "npm run dev",
    "test": "jest ./src/tests",
    "test.watch": "jest ./src/tests --watch",
    "test.e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@builder.io/qwik": ">=0.0.41"
  },
  "devDependencies": {
    "@builder.io/qwik": "0.0.41",
    "@builder.io/qwik-city": "0.0.30",
    "@playwright/test": "^1.24.0",
    "@types/eslint": "8.4.5",
    "@types/jest": "^28.1.6",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "eslint": "8.20.0",
    "eslint-plugin-qwik": "0.0.41",
    "jest": "^28.1.3",
    "node-fetch": "3.2.9",
    "np": "7.6.2",
    "ts-jest": "^28.0.7",
    "typescript": "4.7.4",
    "vite": "3.0.2"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "import": "./lib/index.qwik.mjs",
      "require": "./lib/index.qwik.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/robisim74/qwik-speak",
  "repository": {
    "type": "git",
    "url": "https://github.com/robisim74/qwik-speak.git"
  },
  "bugs": {
    "url": "https://github.com/robisim74/qwik-speak/issues"
  },
  "keywords": [
    "qwik",
    "i18n",
    "intl",
    "translate"
  ],
  "license": "MIT",
  "main": "./lib/index.qwik.cjs",
  "module": "./lib/index.qwik.mjs",
  "private": false,
  "qwik": "./lib/index.qwik.mjs",
  "type": "module",
  "types": "./lib/types/index.d.ts",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
