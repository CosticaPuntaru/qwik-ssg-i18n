{
  "name": "qwik-speak",
  "description": "Internationalization (i18n) library to translate texts, dates and numbers in Qwik apps",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "lint": "eslint src/**/*.ts*",
    "preview": "qwik build preview && vite preview --open",
    "qwik-speak-extract": "qwik-speak-extract --supportedLangs=en-US,it-IT",
    "start": "vite --open --mode ssr",
    "test": "vitest test --run",
    "test.e2e": "playwright test",
    "qwik": "qwik"
  },
  "bin": {
    "qwik-speak-extract": "./packages/qwik-speak/extract/cli.js"
  },
  "devDependencies": {
    "@builder.io/qwik": "0.23.0",
    "@builder.io/qwik-city": "0.6.6",
    "@playwright/test": "^1.31.2",
    "@types/eslint": "8.21.2",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-plugin-qwik": "0.23.0",
    "typescript": "5.0.2",
    "undici": "5.21.0",
    "vite": "4.2.0",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "^0.29.7"
  },
  "type": "module"
}
